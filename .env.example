# ===========================================
# WebScraping Automation Builder
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in the values
# cp .env.example .env

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=webscraping
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/webscraping

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Firecrawl Configuration
# ===========================================
# Self-hosted Firecrawl URL
FIRECRAWL_API_URL=http://localhost:3002

# Optional: API key for Firecrawl (leave empty for local)
FIRECRAWL_API_KEY=

# Rate limiting (requests per minute)
FIRECRAWL_RATE_LIMIT=20

# ===========================================
# LLM Configuration (OpenRouter)
# ===========================================
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter base URL
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default LLM model (free tier)
# Options: meta-llama/llama-3.3-8b-instruct:free, google/gemma-2-9b-it:free
LLM_MODEL=meta-llama/llama-3.3-8b-instruct:free

# ===========================================
# Application Settings
# ===========================================
# Debug mode (set to false in production)
DEBUG=true

# Secret key for JWT tokens (change in production!)
SECRET_KEY=your-super-secret-key-change-in-production

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Frontend Configuration
# ===========================================
# Backend API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

